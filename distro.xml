<?xml version="1.0" encoding="UTF-8"?>
<assembly 
	xmlns="http://maven.apache.org/xsd/assembly"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/xsd/assembly http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">
	<id>hades-distro</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.synyx.hades:org.synyx.hades</include>
				<include>org.synyx.hades:org.synyx.hades.sample</include>
			</includes>
			<binaries>
				<outputDirectory>dist</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib/required</outputDirectory>
					</dependencySet>
					<dependencySet>
						<scope>provided</scope>
						<outputDirectory>lib/optional</outputDirectory>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>